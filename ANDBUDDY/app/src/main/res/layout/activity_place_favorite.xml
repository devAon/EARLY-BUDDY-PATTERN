<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable
            name="placefavoriteActivity"
            type="com.devaon.andbuddy.feature.placefavorite.PlaceFavoriteActivity" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.placefavorite.PlaceFavoriteActivity">


    <TextView
        android:id="@+id/act_place_favorite_tv_ment"
        android:layout_width="206dp"
        android:layout_height="94dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:lineSpacingExtra="8sp"
        android:text="자주 가는 장소를\n등록해주세요."
        android:textColor="@color/white"


        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_place_favorite_cl_register_first"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="52dp"

        android:background="@drawable/round_rect_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_tv_ment">

        <TextView
            android:id="@+id/act_place_favorite_tv_first"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="장소를 등록해주세요."
            android:textColor="@color/gray"

            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/act_place_favorite_tv"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/round_rect_gray_full"
        android:gravity="center"
        android:text="등록하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_cl_register_first" />

    <TextView
        android:id="@+id/act_place_favorite_tv_skip"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="건너뛰기"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_tv" />

    <ImageView
        android:id="@+id/act_place_favorite_iv_select_one"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="41dp"
        android:cropToPadding="true"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/act_place_favorite_cl_register_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/act_place_favorite_cl_register_first"
        app:srcCompat="@drawable/ic_plus" />

    <ImageView
        android:id="@+id/act_place_favorite_iv_background"
        android:layout_width="485dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_place"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>